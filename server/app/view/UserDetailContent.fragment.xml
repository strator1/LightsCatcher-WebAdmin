<core:FragmentDefinition
      xmlns="sap.m"
      xmlns:f="sap.ui.layout.form"
      xmlns:core="sap.ui.core">
   <VBox class="sapUiSmallMargin">
      <f:SimpleForm id="userForm"
                    minWidth="1024"
                    maxContainerCols="2"
                    editable="true"
                    layout="ResponsiveGridLayout"
                    labelSpanL="3"
                    labelSpanM="3"
                    emptySpanL="4"
                    emptySpanM="4"
                    columnsL="1"
                    columnsM="1">
         <f:content>
            <Label text="E-Mail" />
            <Input value="{userModel>/email}" />
            <Label text="Name" />
            <Input value="{userModel>/name}" />
            <Label text="Points" />
            <Input value="{userModel>/points}" />
         </f:content>
      </f:SimpleForm>
   </VBox>
</core:FragmentDefinition>
